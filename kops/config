apiVersion: kops/v1alpha2
kind: Cluster
metadata:
  name: mycluster.wavetesting.com
spec:
  cloudProvider: aws
  configBase: s3://kub-wavetesting-com-state-store/mycluster.wavetesting.com
  etcdClusters:
  - etcdMembers:
    - instanceGroup: master-eu-west-1a
      name: a
    name: main
  - etcdMembers:
    - instanceGroup: master-eu-west-1a
      name: a
    name: events
  subnets:
  - cidr: 172.20.32.0/19
    name: eu-west-1a
    type: Public
    zone: eu-west-1a


---

apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  name: master-eu-west-1a
spec:
  image: kope.io/k8s-1.5-debian-jessie-amd64-hvm-ebs-2017-01-09
  machineType: m3.medium
  maxSize: 1
  minSize: 1
  role: Master
  subnets:
  - eu-west-1a
  
  ---

apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  name: nodes
spec:
  image: kope.io/k8s-1.5-debian-jessie-amd64-hvm-ebs-2017-01-09
  machineType: t2.medium
  maxSize: 2
  minSize: 1
  role: Node
  subnets:
  - eu-west-1a
